<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ts10.Ts10_SmartCommunity">

    <RelativeLayout
        android:id="@+id/news_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="221dp"
            android:layout_height="118dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="38dp"
            android:gravity="center"
            android:text="这里是新闻滚动"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#205F44" />

    <LinearLayout
        android:id="@+id/service_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Property_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pp_logo"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/property_logo" />

            <TextView
                android:id="@+id/pp_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="物业服务"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#205F44" />

        <LinearLayout
            android:id="@+id/Delivery_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dl_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/delivery_logo" />

            <TextView
                android:id="@+id/dl_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="快件管理"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#205F44" />

        <LinearLayout
            android:id="@+id/Neighbors_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nh_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/neighbors_logo" />

            <TextView
                android:id="@+id/nh_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="友邻社交"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#205F44" />

        <LinearLayout
            android:id="@+id/Business_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bn_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/business_logo" />

            <TextView
                android:id="@+id/bn_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商业推广"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#205F44" />

        <LinearLayout
            android:id="@+id/CarManager_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cm_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/carmanager_logo" />

            <TextView
                android:id="@+id/cm_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="车辆管理"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>