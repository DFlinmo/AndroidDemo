<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ts10.Ts10_businessDetail">

    <TextView
        android:id="@+id/business_name"
        android:layout_width="336dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="店面"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/business_img"
        android:layout_width="335dp"
        android:layout_height="124dp"
        app:layout_constraintStart_toStartOf="@+id/business_name"
        app:layout_constraintTop_toBottomOf="@+id/business_name"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/business_article"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:ellipsize="marquee"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:maxLines="15"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/business_img"
        app:layout_constraintTop_toBottomOf="@+id/business_img" />

    <TextView
        android:id="@+id/business_calltitle"
        android:layout_width="281dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="联系方式"
        android:textSize="24sp"
        android:background="@drawable/boder_square"
        app:layout_constraintStart_toStartOf="@+id/business_article"
        app:layout_constraintTop_toBottomOf="@+id/business_article" />

    <ImageView
        android:id="@+id/business_call"
        android:layout_width="66dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/business_calltitle"
        app:layout_constraintStart_toEndOf="@+id/business_calltitle"
        app:srcCompat="@mipmap/call" />
</androidx.constraintlayout.widget.ConstraintLayout>